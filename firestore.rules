rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // HELPER FUNCTIONS
    // ========================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user is the owner of a resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Check if user is GM of a room
    function isRoomGM(roomId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/rooms/$(roomId)).data.gmId == request.auth.uid;
    }
    
    // Check if user is a member of a room
    function isRoomMember(roomId) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/rooms/$(roomId)/members/$(request.auth.uid));
    }
    
    // ========================================
    // USER PROFILES
    // ========================================
    
    match /users/{userId} {
      // Only owner can read/write their profile
      allow read, write: if isOwner(userId);
      
      // Character templates subcollection
      match /characters/{charId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's room list
      match /rooms/{roomId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // ========================================
    // ROOMS
    // ========================================
    
    match /rooms/{roomId} {
      // Anyone authenticated can create a room
      allow create: if isAuthenticated();
      
      // Allow read for anyone authenticated (needed for join check)
      // This is safe because room data is not sensitive
      allow read: if isAuthenticated();
      
      // Only GM can update/delete room
      allow update, delete: if isRoomGM(roomId);
      
      // ----------------------------------------
      // MEMBERS SUBCOLLECTION
      // ----------------------------------------
      match /members/{memberId} {
        // Allow read for authenticated users (needed during join)
        allow read: if isAuthenticated();
        
        // User can add themselves (join room)
        allow create: if isAuthenticated() && request.auth.uid == memberId;
        
        // User can update their own member doc (online status, etc.)
        allow update: if isOwner(memberId) || isRoomGM(roomId);
        
        // Only GM can remove members, or user can remove themselves
        allow delete: if isOwner(memberId) || isRoomGM(roomId);
      }
      
      // ----------------------------------------
      // CHARACTERS IN ROOM
      // ----------------------------------------
      match /characters/{charId} {
        // All authenticated users can read (for party view)
        allow read: if isAuthenticated();
        
        // Owner can create/update their own characters
        allow create: if isAuthenticated() && 
          request.resource.data.ownerId == request.auth.uid;
        
        allow update: if isAuthenticated() && 
          (resource.data.ownerId == request.auth.uid || isRoomGM(roomId));
        
        // Owner or GM can delete
        allow delete: if isAuthenticated() && 
          (resource.data.ownerId == request.auth.uid || isRoomGM(roomId));
      }
      
      // ----------------------------------------
      // CHAT MESSAGES
      // ----------------------------------------
      match /chat/{messageId} {
        // Members can read all chat
        allow read: if isRoomMember(roomId);
        
        // Members can create messages (as themselves)
        allow create: if isRoomMember(roomId) && 
          request.resource.data.oderId == request.auth.uid;
        
        // Only author or GM can update/delete
        allow update, delete: if isAuthenticated() && 
          (resource.data.oderId == request.auth.uid || isRoomGM(roomId));
      }
      
      // ----------------------------------------
      // DICE ROLLS
      // ----------------------------------------
      match /dice/{rollId} {
        // Members can read all dice rolls
        allow read: if isRoomMember(roomId);
        
        // Members can create rolls (as themselves)
        allow create: if isRoomMember(roomId);
        
        // GM can delete (for room cleanup), no updates
        allow update: if false;
        allow delete: if isRoomGM(roomId);
      }
      
      // ----------------------------------------
      // SESSIONS
      // ----------------------------------------
      match /sessions/{sessionId} {
        // All authenticated users can read sessions (needed for joining)
        allow read: if isAuthenticated();
        
        // Only GM can create/update/delete sessions
        allow create, update, delete: if isRoomGM(roomId);
      }
      
      // ----------------------------------------
      // NOTES (shared notes in room)
      // ----------------------------------------
      match /notes/{noteId} {
        // Members can read all notes
        allow read: if isRoomMember(roomId);
        
        // Members can create notes
        allow create: if isRoomMember(roomId);
        
        // Owner or GM can update/delete
        allow update, delete: if isAuthenticated() && 
          (resource.data.ownerId == request.auth.uid || isRoomGM(roomId));
      }
      
      // ----------------------------------------
      // WHITEBOARD
      // ----------------------------------------
      match /whiteboard/{elementId} {
        // Members can read/write whiteboard elements
        allow read, write: if isRoomMember(roomId);
      }
      
      // ----------------------------------------
      // MAP MARKERS
      // ----------------------------------------
      match /markers/{markerId} {
        // Members can read all markers
        allow read: if isRoomMember(roomId);
        
        // GM can create/update/delete markers
        allow create, update, delete: if isRoomGM(roomId);
      }
    }
    
    // ========================================
    // LEGACY: Top-level sessions (for migration)
    // ========================================
    match /sessions/{sessionId} {
      // Temporarily allow for existing sessions
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // ========================================
    // DEFAULT DENY
    // ========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
